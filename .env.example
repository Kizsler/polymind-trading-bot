# PolyMind Environment Variables
# Copy this file to .env and fill in your values

# Claude API (required for AI decisions)
POLYMIND_CLAUDE_API_KEY=sk-ant-your-key-here

# Database (PostgreSQL)
POLYMIND_DB_HOST=localhost
POLYMIND_DB_PORT=5432
POLYMIND_DB_NAME=polymind
POLYMIND_DB_USER=postgres
POLYMIND_DB_PASSWORD=postgres

# Redis
POLYMIND_REDIS_HOST=localhost
POLYMIND_REDIS_PORT=6379
POLYMIND_REDIS_DB=0

# Trading Mode: paper, live, or paused
POLYMIND_MODE=paper

# Logging: DEBUG, INFO, WARNING, ERROR
POLYMIND_LOG_LEVEL=INFO

# Risk Limits
POLYMIND_RISK_MAX_DAILY_LOSS=500.0
POLYMIND_RISK_MAX_TOTAL_EXPOSURE=2000.0
POLYMIND_RISK_MAX_SINGLE_TRADE=100.0

# Discord (optional)
POLYMIND_DISCORD_BOT_TOKEN=
POLYMIND_DISCORD_CHANNEL_ID=
POLYMIND_DISCORD_ENABLED=false
